<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/frm_table_cell_container"
        android:layout_width="@dimen/table_cell_width"
        android:layout_height="@dimen/table_cell_height"
        android:layout_margin="@dimen/table_cell_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_background">

            <TextView
                android:id="@+id/txt_table_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/tableCellTextColor"
                android:textSize="@dimen/tableCellTextSize" />
        </FrameLayout>

    </FrameLayout>
</FrameLayout>